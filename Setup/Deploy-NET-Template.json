{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualNetworkName": {
            "type": "string"
        },
        "VirtualNetworkAddressSpace": {
            "type": "string"
        },
        "VirtualNetworkSubnetAddress": {
            "type": "string"
        },
        "VirtualNetworkSubnetCount": {
            "type": "int"
        },
        "VirtualNetworkSubnetPrefix": {
            "type": "string"
        }
    },
    "variables": {
        "subnetpart1": "[split(parameters('VirtualNetworkSubnetAddress'),'.')]",
        "copy": [{
            "name": "subnetArray",
            "count": "[parameters('VirtualNetworkSubnetCount')]",
            "input": "[concat(variables('subnetpart1')[0],'.',variables('subnetpart1')[1],'.',copyIndex('subnetArray', 1),',',variables('subnetpart1')[3])]"
        }]
    },
    "resources": [
        {
            "name": "[parameters('VirtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VirtualNetworkAddressSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(parameters('VirtualNetworkSubnetPrefix'),padLeft('0',2,'0'))]",
                        "properties": {
                            "addressPrefix": "[parameters('VirtualNetworkSubnetAddress')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "name": "[concat(parameters('VirtualNetworkName'),'/',parameters('VirtualNetworkSubnetPrefix'),padLeft(copyIndex(1),2,'0'))]",
            "copy": {
                "name": "SubnetCopy",
                "count": "[parameters('VirtualNetworkSubnetCount')]",
                "batchSize": 1,
                "mode": "Serial"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/',parameters('VirtualNetworkName'))]"
            ],
            "properties": {
                "addressPrefix": "[variables('subnetArray')[copyIndex()]]"
            }
        }
    ],
    "outputs": {}
}