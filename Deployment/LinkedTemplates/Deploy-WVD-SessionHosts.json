{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timeStamp": {
      "type": "string",
      "defaultValue": "[utcNow()]"
    },
    "az_logAnalyticsWorkspaceId": {
      "type": "string"
    },
    "az_logAnalyticsWorkspaceKey": {
      "type": "string"
    },
    "az_vmSize": {
      "type": "string"
    },
    "az_vmNumberOfInstances": {
      "type": "int"
    },
    "az_vmNamePrefix": {
      "type": "string"
    },
    "az_vmImageOffer": {
      "type": "string"
    },
    "az_vmImagePublisher": {
      "type": "string"
    },
    "az_vmImageSKU": {
      "type": "string"
    },
    "az_vmDiskType": {
      "type": "string"
    },
    "dj_AdminAccountUPN": {
      "type": "string"
    },
    "dj_AdminAccountPassword": {
      "type": "securestring"
    },
    "dj_OrganizationalUnit": {
      "type": "string"
    },
    "dj_Domain": {
      "type": "string"
    },
    "wvd_Env": {
      "type": "string"
    },
    "wvd_Type": {
      "type": "string"
    },
    "wvd_Build": {
      "type": "string"
    },
    "wvd_Role": {
      "type": "string"
    },
    "wvd_buildVersion": {
      "type": "string"
    },
    "wvd_hostPoolName": {
      "type": "string"
    },
    "wvd_subnetId": {
      "type": "string"
    },
    "az_vmAdminAccount": {
      "type": "string"
    },
    "az_vmAdminAccountPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "storageAccountType": "[parameters('az_vmDiskType')]",
    "wvdResourceLocation": "[resourceGroup().location]"
  },
  "functions": [
    {
      "namespace": "wvdSessionHost",
      "members": {
        "getName": {
          "parameters": [
            {
              "name": "wvdshPrefix",
              "type": "string"
            },
            {
              "name": "sessionHostIncrement",
              "type": "int"
            }
          ],
          "output": {
            "type": "string",
            "value": "[toLower(concat(parameters('wvdshPrefix'),'sh',padLeft(parameters('sessionHostIncrement'),3,'0')))]"
          }
        }
      }
    }
  ],
  "resources": [
    // Virtual Network Interface creation; copy iteration based on the 'az_vmNumberOfInstances' parameter
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)),'-nic-',parameters('timeStamp'))]",
      "location": "[variables('wvdResourceLocation')]",
      "copy": {
        "name": "WVD-SH-nic-loop",
        "count": "[parameters('az_vmNumberOfInstances')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('wvd_subnetId')]"
              }
            }
          }
        ]
      },
      "dependsOn": [
      ]
    },
    // [ZONES] Virtual Machine creation; copy iteration based on the 'az_vmNumberOfInstances' parameter
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1))]",
      "location": "[variables('wvdResourceLocation')]",
      "tags": {
        "WVD-Maintenance": "True",
        "WVD-Environment": "[parameters('wvd_Env')]",
        "WVD-Type": "[parameters('wvd_Type')]",
        "WVD-Build": "[parameters('wvd_Build')]",
        "WVD-Role": "[parameters('wvd_Role')]",
        "WVD-BuildVersion": "[parameters('wvd_buildVersion')]",
        "WVD-Group": "[if(equals(add(mod(copyIndex('WVD-SH-VM-Loop'), 2), 1), 1), 'A', 'B')]"
      },
      "copy": {
        "name": "WVD-SH-VM-Loop",
        "count": "[parameters('az_vmNumberOfInstances')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces',concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)),'-nic-',parameters('timeStamp')))]"
      ],
      "zones": "[if(greaterOrEquals(parameters('az_vmNumberOfInstances'),2),split(string(add(mod(copyIndex('WVD-SH-VM-Loop'),3),1)), ','),'')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('az_vmSize')]"
        },
        "osProfile": {
          "computerName": "[wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1))]",
          "adminUsername": "[parameters('az_vmAdminAccount')]",
          "adminPassword": "[parameters('az_vmAdminAccountPassword')]",
          "windowsConfiguration": {
            "timeZone": "Pacific Standard Time"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('az_vmImagePublisher')]",
            "offer": "[parameters('az_vmImageOffer')]",
            "sku": "[parameters('az_vmImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "name": "[concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)),'-osDisk-',parameters('timeStamp'))]",
            "managedDisk": {
              "storageAccountType": "[variables('storageAccountType')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)),'-nic-',parameters('timeStamp')))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": false
          }
        },
        "licenseType": "Windows_Client"
      }
    },
    // Microsoft Monitoring Agent extension; copy iteration based on the 'az_vmNumberOfInstances' parameter
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)), '/MMAExtension')]",
      "location": "[variables('wvdResourceLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines',wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)))]"
      ],
      "copy": {
        "name": "WVD-SH-MMA-Extension",
        "count": "[parameters('az_vmNumberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
        "type": "MicrosoftMonitoringAgent",
        "typeHandlerVersion": "1.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "workspaceId": "[parameters('az_logAnalyticsWorkspaceId')]"
        },
        "protectedSettings": {
          "workspaceKey": "[parameters('az_logAnalyticsWorkspaceKey')]"
        }
      }
    },
    // Azure Depenency Agent extension; copy iteration based on the 'az_vmNumberOfInstances' parameter
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)), '/DependencyAgent')]",
      "location": "[variables('wvdResourceLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions', wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1)), 'MMAExtension')]"
      ],      
      "copy": {
        "name": "WVD-SH-DepAgent-Extension",
        "count": "[parameters('az_vmNumberOfInstances')]"
      },
      "properties": {
          "publisher": "Microsoft.Azure.Monitoring.DependencyAgent",
          "type": "DependencyAgentWindows",
          "typeHandlerVersion": "9.10",
          "autoUpgradeMinorVersion": true
      }
    },
    // joinDomain extension; copy iteration based on the 'az_virtualMachineNames' parameter
    {
      "apiVersion": "2019-07-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(wvdSessionHost.getName(parameters('az_vmNamePrefix'), copyIndex(1)), '/ActiveDirectoryDomainJoin')]",
      "location": "[variables('wvdResourceLocation')]",
      "dependsOn": [],
      "copy": {
        "name": "WVD-SH-Domain-Join-Loop",
        "count": "[parameters('az_vmNumberOfInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "name": "[parameters('dj_Domain')]",
          "ouPath": "[parameters('dj_OrganizationalUnit')]",
          "user": "[parameters('dj_AdminAccountUPN')]",
          "restart": "true",
          "options": "3"
        },
        "protectedSettings": {
          "password": "[parameters('dj_AdminAccountPassword')]"
        }
      }
    }
  ],
  "outputs": {
    "sessionHostNames": {
      "type": "array",
      "copy": {
        "count": "[parameters('az_vmNumberOfInstances')]",
        "input": "[wvdSessionHost.getName(parameters('az_vmNamePrefix'),copyIndex(1))]"
      }
    }
  }
}